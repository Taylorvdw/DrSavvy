@model DrSavvy.Models.Allergy

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Allergy</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Allergy_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Allergy_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Allergy_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Allergy_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" style="border-radius:20px" onclick="CloseIframe()" />
                <button type="button" class="btn btn-danger" onclick="CloseIframe()" style="border-radius:20px;margin-left:250px">Discard</button>
            </div>
        </div>
    </div>
    <script>
        function CloseIframe() {
            setTimeout(function () { window.top.location.href = "/Allergies/Index" }, 650)

        }
    </script>
}
