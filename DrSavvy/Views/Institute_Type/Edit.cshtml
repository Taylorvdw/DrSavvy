@model DrSavvy.Models.Institute_Type

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="border-radius:20px">
        <h4>Modify Type</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Institute_Type_ID)

        <div class="form-group">
            @Html.Label("Institute Type Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Institute_Type_Name, new { htmlAttributes = new { @class = "form-control" , @style="border-radius:20px"} })
                @Html.ValidationMessageFor(model => model.Institute_Type_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" onclick="CloseIframe()" style="border-radius:20px" />
                <button  type="button" class="btn btn-dark" onclick="CloseIframe()" style="border-radius:20px;margin-left:250px">Discard</button>
            </div>
        </div>
    </div>
    <script>
        function CloseIframe() {
            setTimeout(function () { window.top.location.href = "/Institute_Type/Index" }, 650)

        }
    </script>
}


