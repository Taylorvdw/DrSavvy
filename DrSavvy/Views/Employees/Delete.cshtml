@model DrSavvy.Models.Employee

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}
<h3>Are you sure you want to delete this Employee?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMPName)
        </dd>

        <dt>
            Surnmae
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMPSurname)
        </dd>

        <dt>
           Cell Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMP_CellphoneNum)
        </dd>

        <dt>
            Email Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMP_Email)
        </dd>

        <dt>
           ID Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Emp_IDNum)
        </dd>

        <dt>
          Role Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee_Role.Emp_Role_Description)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
    <input type="submit" value="Delete" class="btn btn-danger" onclick="CloseIframe()" />
    <button type="reset"class="btn btn-danger" onclick="CloseIframe()" style="float:right">Cancel</button>
</div>
    }
</div>

<script>
    function CloseIframe() {
        setTimeout(function () { window.top.location.href = "/Employees/Index" }, 650)

    }
</script>

