@model DrSavvy.Models.Institute

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<h4>Modify Institute</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="overflow:hidden">
        <hr  style="background-color:white"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Institute_ID)

        <div class="form-group">
            @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Institute_Name, new { htmlAttributes = new { @class = "form-control" , @style="border-radius:20px;" } })
                @Html.ValidationMessageFor(model => model.Institute_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Institute Type ID", htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("Institute_Type_ID", null, htmlAttributes: new { @class = "form-control" , @style="border-radius:20px;color:white;background-color:black"  })
                @Html.ValidationMessageFor(model => model.Institute_Type_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Contact Person", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Institute_ContactPerson, new { htmlAttributes = new { @class = "form-control" , @style="border-radius:20px;" } })
                @Html.ValidationMessageFor(model => model.Institute_ContactPerson, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Contact Number", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Instsitute_ContactNumber, new { htmlAttributes = new { @class = "form-control", @style="border-radius:20px;"  } })
                @Html.ValidationMessageFor(model => model.Instsitute_ContactNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" style="border-radius:20px" onclick="CloseIframe()" />
                <button type="button" class="btn btn-danger" onclick="CloseIframe()" style="border-radius:20px;margin-left:250px">Discard</button>
            </div>
        </div>
    </div>
    <script>
        function CloseIframe() {
            setTimeout(function () { window.top.location.href = "/Institutes/Index" }, 650)

        }
    </script>
}

