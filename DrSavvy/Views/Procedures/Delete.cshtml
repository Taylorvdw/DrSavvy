@model DrSavvy.Models.Procedure

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr  style="background-color:white"/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Procedure Description")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Procedure_Description)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="CloseIframe()" style="border-radius:20px" />
            <button type="reset" class="btn btn-dark" onclick="CloseIframe()"  style="border-radius:20px;margin-left:300px">Cancel</button>
        </div>
    }
</div>

<script>
    function CloseIframe() {
        setTimeout(function () { window.top.location.href = "/Procedures/Index" }, 650)

    }
</script>