@model IEnumerable<DrSavvy.Models.ApplicationUser>

@{
    ViewBag.Title = "System Users";
}

<div>
    <button type="button" class="btn btn-outline-success btn-sm" onclick="window.location.href='@Url.Action("Register","Account")'">Register New System User</button>
</div>

<table class="table table-striped table-dark" style="border-radius: 25px;">
    <tr style="background-color:#499df5">
        <th>
            @Html.DisplayName("UserName")
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>|
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
