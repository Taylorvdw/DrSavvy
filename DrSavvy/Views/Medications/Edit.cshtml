@model DrSavvy.Models.Medication

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Medication</h4>
        <hr style="background-color:white" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Medication_ID)

        <div class="form-group">
            @Html.Label("Mediction Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mediction_Description, new { htmlAttributes = new { @class = "form-control", @style="border-radius:20px" } })
                @Html.ValidationMessageFor(model => model.Mediction_Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" onclick="CloseIframe()" style="border-radius:20px" />
                <button type="button" class="btn btn-danger" onclick="CloseIframe()" style="border-radius:20px;margin-left:250px">Discard</button>
            </div>
        </div>
    </div>

}
<script>
    function CloseIframe() {
        setTimeout(function () { window.top.location.href = "/Medications/Index" }, 650)
    }
</script>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}
