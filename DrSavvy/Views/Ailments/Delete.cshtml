@model DrSavvy.Models.Ailment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ailment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ICD10)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ICD10)
        </dd>

        <dt>
            @Html.DisplayName("Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ailment_Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" style="border-radius:20px" onclick="CloseIframe()" />
            <button type="reset" class="btn btn-danger" onclick="CloseIframe()" style="border-radius:20px">Cancel</button>
        </div>
    }
</div>

<script>
    function CloseIframe() {
        setTimeout(function () { window.top.location.href = "/Ailments/Index" }, 650)

    }
</script>
