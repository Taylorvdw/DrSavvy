@model IEnumerable<DrSavvy.Models.Medical_Aid_Claim>
@{
    Layout = "";
}
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/Invoice.css" rel="stylesheet" />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</head>
<!------ Include the above in your HEAD tag ---------->
<div id="invoice" style="margin-left:20%; margin-right:20%">
    <div>
        <h1 style="text-align:center" class="invoice-id">Rejected Medical Aid Report</h1>
    </div>

    <div class="toolbar hidden-print">
        <div class="text-right">
            <button id="printInvoice" onclick="window.print()" class="btn btn-info"><i class="fa fa-print"></i> Print</button>
            <button onclick="window.location.href='@Url.Action("ExportXrayForm","Report")'" class="btn btn-info"><i class="fa fa-file-pdf-o"></i> Export as PDF</button>
        </div>
        <hr>
    </div>
    <div class="invoice overflow-auto">
        <div style="min-width: 600px">
            <header>
                <table class="table-borderless !important" style="background-color:none !important;">
                    <tr>
                        <td>
                            <div class="col">
                                <a target="_blank" href="https://lobianijs.com">
                                    <img height="200" class="card-img" src="~/Content/SAVVY.png" data-holder-rendered="true" />

                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="col company-details">
                                <h2 class="name">
                                    <a target="_blank" href="https://lobianijs.com">
                                        DR MCE MC DONALD
                                    </a>
                                </h2>
                                <div>Suite 4a Faerie Glen Medical Centre,<br /> Cnr Jacqueline & Atterbury Street,<br /> Pretoria, GP</div>
                                <div>012 348 1185</div>
                                <div>mce@drsavvy.co.za</div>
                            </div>
                        </td>
                    </tr>
                </table>
            </header>
            <main>

                <hr />
                <!-----------------------X-Ray Form------------------------>
                @if (Model != null)
                {
                    <table border="0" cellspacing="0" cellpadding="0">
                        <thead>
                            <tr>
                                <th class="no">Consulation ID</th>
                                <th class="text-left">Patient</th>
                                <th class="text-left">Description</th>
                                <th class="text-left">Status</th>
                                <th class="text-left">Date</th>
                                <th class="text-left">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ToList())
                            {

                            <tr>
                                <td class="no">@item.Consultation_ID</td>
                                <td class="text-left"> @item.Consultation.Patient_ID <br /><strong>@item.Consultation.Patient.PatientName @item.Consultation.Patient.PatientSurname</strong><br />@item.Consultation.Patient.Medical_Aid_Scheme.Medical_Aid_Company.Company_Name <br />@item.Consultation.Patient.MedicalAidNo</td>
                                <td class="text-left">@item.Claim_Description</td>
                                <td class="text-left bg-danger">@item.ClaimStatus</td>
                                <td class="text-left bg-danger">@item.Claim_Date</td>
                                <td class="text-left">R @item.Claim_Amount</td>
                            </tr>
                            }
                        </tbody>
                    </table>

                }
                else
                {
                    <table border="0" cellspacing="0" cellpadding="0">
                        <thead>
                            <tr>
                                <th class="no">Consulation ID</th>
                                <th class="text-left">Patient</th>
                                <th class="text-left">Description</th>
                                <th class="text-left">Status</th>
                                <th class="text-left">Date</th>
                                <th class="text-left">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td> No Data avaliable</td>
                            </tr>
                        </tbody>
                    </table>
                }

                <div class="notices">
                    <div>NOTICE:</div>
                    <div class="notice"><strong>Please review form to ensure all details are correct</strong></div>
                </div>
            </main>
            <footer>
                Form was created on a computer and is valid without the signature and seal.
            </footer>
        </div>
        <!--DO NOT DELETE THIS div. IT is responsible for showing footer always at the bottom-->
        <div></div>
    </div>
</div>
